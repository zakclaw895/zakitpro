---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - Page Not Found" description="Page not found">
  <div class="max-w-2xl mx-auto px-4 py-24 text-center">
    <h1 class="text-6xl font-bold text-accent mb-4">404</h1>
    <h2 class="text-2xl font-bold mb-4">Page Not Found</h2>
    <p class="text-gray-600 dark:text-gray-400 mb-8">
      Sorry, the page you're looking for doesn't exist. Let's get you back on track.
    </p>
    
    <!-- Search -->
    <div class="max-w-md mx-auto mb-8">
      <input 
        type="text" 
        placeholder="Search for what you were looking for..."
        class="w-full px-6 py-3 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-full"
      />
    </div>
    
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/" class="px-6 py-3 bg-accent text-white rounded-full hover:bg-orange-600 transition-colors">
        Go Home
      </a>
      <a href="/scripts/" class="px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-full hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
        Browse Scripts
      </a>
    </div>
  </div>
</BaseLayout>
