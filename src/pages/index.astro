---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import ArticleCard from '../components/ArticleCard.astro';
import PillarCard from '../components/PillarCard.astro';

const pillars = [
  { 
    id: 'troubleshooting', 
    name: 'Windows Troubleshooting', 
    description: 'Boot failures, BSOD, event log forensics, profile corruption, error codes',
    icon: 'ðŸ”§'
  },
  { 
    id: 'scripting', 
    name: 'Scripting & Automation', 
    description: 'PowerShell, Graph API, task automation, scheduled jobs',
    icon: 'âš¡'
  },
  { 
    id: 'deployment', 
    name: 'Deployment & Imaging', 
    description: 'Autopilot, WinPE, MDT, driver injection, provisioning',
    icon: 'ðŸ“¦'
  },
  { 
    id: 'security', 
    name: 'Endpoint Security', 
    description: 'CIS benchmarks, LAPS, Defender for Endpoint, BitLocker, Conditional Access',
    icon: 'ðŸ”’'
  },
  { 
    id: 'packaging', 
    name: 'App Packaging', 
    description: 'Win32/Intune packaging, PSADT, silent installs, detection rules',
    icon: 'ðŸ“±'
  },
  { 
    id: 'career', 
    name: 'Career & Craft', 
    description: 'Career progression, lab setup, cert roadmaps, documentation, tooling',
    icon: 'ðŸš€'
  }
];

// Get all published articles
const allArticles = await getCollection('articles', ({ data }) => !data.draft);

// Get latest 5 articles
const latestArticles = allArticles
  .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
  .slice(0, 5);

// Get 2 most recent articles per pillar
const pillarArticles = pillars.map(pillar => ({
  ...pillar,
  articles: allArticles
    .filter(a => a.data.pillar === pillar.id)
    .sort((a, b) => new Date(b.data.publishedAt).getTime() - new Date(a.data.publishedAt).getTime())
    .slice(0, 2)
}));
---

<BaseLayout title="Home" description="IT Desktop Engineering Blog - Technical articles, PowerShell scripts, and career guides for endpoint engineers.">
  <!-- Hero Section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
        <span class="text-gray-900 dark:text-white">zakitpro</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        IT Desktop Engineering Blog â€” Technical articles, PowerShell scripts, and career guides for endpoint engineers.
      </p>
      
      <!-- Search Bar -->
      <div class="max-w-2xl mx-auto">
        <div class="relative">
          <input 
            type="text" 
            id="search-input"
            placeholder="Search articles, error codes, scripts..."
            class="w-full px-6 py-4 text-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-full shadow-sm focus:ring-2 focus:ring-accent focus:border-transparent"
          />
          <button class="absolute right-4 top-1/2 -translate-y-1/2 p-2 text-gray-400 hover:text-accent">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </button>
        </div>
        <p class="text-sm text-gray-500 mt-2">Press <kbd class="px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded">Ctrl</kbd> + <kbd class="px-2 py-1 bg-gray-200 dark:bg-gray-700 rounded">K</kbd> to search</p>
      </div>
    </div>
  </section>
  
  <!-- Pillar Cards -->
  <section class="py-12">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {pillarArticles.map(pillar => (
          <PillarCard pillar={pillar} />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Latest Articles -->
  <section class="py-12 bg-gray-50 dark:bg-gray-800/50">
    <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-heading font-bold mb-6">Latest Articles</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {latestArticles.map(article => (
          <ArticleCard article={article.data} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<!-- Pagefind UI -->
<link href="/pagefind/pagefind-ui.css" rel="stylesheet">
<script src="/pagefind/pagefind-ui.js" is:inline></script>
<script is:inline>
  document.getElementById('search-input')?.addEventListener('focus', () => {
    // Initialize Pagefind when user clicks search
    if (!window.pagefindUI) {
      new PagefindUI({ 
        element: "#search-input", 
        showSubResults: true,
        showImages: false
      });
    }
  });
</script>
