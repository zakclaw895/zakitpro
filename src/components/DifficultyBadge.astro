---
interface Props {
  difficulty: string;
}

const { difficulty } = Astro.props;

const colors = {
  junior: 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200',
  mid: 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200',
  senior: 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
};

const labels = {
  junior: 'Junior',
  mid: 'Mid-Level',
  senior: 'Senior'
};
---

<span class={`inline-block px-2 py-1 text-xs font-medium rounded-full ${colors[difficulty]}`}>
  {labels[difficulty]}
</span>
